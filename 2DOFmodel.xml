<mujoco model="2DOF_Robot_Arm">
    <compiler angle="radian" />

    <!-- Default settings for all elements -->
    <default>
        <joint armature="0.01" damping="0.1" limited="true" />
        <geom conaffinity="0" condim="3" contype="0" friction="0.8 0.1 0.1" rgba="0.8 0.6 0.4 1" solimp="0.9 0.95 0.001" solref="0.02 1" />
    </default>

    <!-- Worldbody -->
    <worldbody>
        <!-- Base Link -->
        <body name="base_link" pos="0 0 0">
            <geom name="base_geom" type="box" size="0.05 0.05 0.05" rgba="0 0 1 1" />

            <!-- First Link -->
            <body name="link1" pos="0 0 0.05">
                <joint name="joint1" type="hinge" pos="0 0 0" axis="0 1 0" range="-3.14159 3.14159" damping="0.1" />
                <geom name="link1_geom" type="cylinder" fromto="0 0 0 0 0 1" size="0.05" rgba="1 0 0 1" mass="1.0" />

                <!-- Second Link -->
                <body name="link2" pos="0 0 1.0">
                    <joint name="joint2" type="hinge" pos="0 0 0" axis="0 1 0" range="-3.14159 3.14159" damping="0.1" />
                    <geom name="link2_geom" type="cylinder" fromto="0 0 0 0 0 1" size="0.05" rgba="0 1 0 1" mass="1.0" />
                </body>
            </body>
        </body>
    </worldbody>

    <!-- Actuators -->
    <actuator>
        <motor name="motor1" joint="joint1" ctrlrange="-1 1" ctrllimited="true" />
        <motor name="motor2" joint="joint2" ctrlrange="-1 1" ctrllimited="true" />
    </actuator>
</mujoco>
